{
  "compilerOptions": {
    "target": "es2021",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": ["vitest/globals"],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "$lib/*": [
        "./src/lib/*"
      ],
      "$components/*": [
        "./src/components/*"
      ],
      "test/*": [
        "./test/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "test/**/*.ts",
    "test/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "types/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.ts",
    "next.config.js",
    "additional.d.ts",
    ".next/types/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
